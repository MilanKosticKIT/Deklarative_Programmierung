/rechnungssammlung/rechnung[position() = 3]/zahlungsmoeglichkeiten/bankverbindung[position() = 1]
/rechnungssammlung/rechnung/leistungssteller/adresse/*[../../telefon]
/rechnungssammlung/rechnung/leistungssteller/adresse[starts-with(postleitzahl,7)]
/rechnungssammlung/rechnung/dienstleistungen/dienstleistung/position[../einzelpreis/betrag < 100]
/rechnungssammlung/rechnung/rechnungsnummer[count(../dienstleistungen/dienstleistung) > 3]
/rechnungssammlung/rechnung/[sum(dienstleistungen/dienstleistung/gesamtpreis/betrag) != sum(kosten/entgeld/betrag)]
/rechnungssammlung/rechnung[contains(leistungsempfaenger/anrede,'Herr') or contains(leistungsempfaenger/anrede,'Frau')]
/rechnungssammlung/rechnung[kosten/entgeld/betrag > 1000]
/rechnungssammlung/rechnung[kosten/entgeld/betrag >= (sum(../rechnung/kosten/entgeld/betrag) div count(../rechnung/kosten/entgeld/betrag))]